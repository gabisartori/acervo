#! /bin/bash

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias ll="ls -la"
alias la="ls -a"
alias upd="sudo pacman -Syu"

# Usage: yt-dlp-mp3 <file_name> <url>
# Preferable file_name should follow the format <artist> - <song_title>
alias yt-dlp-mp3="yt-dlp -x --audio-format mp3 --embed-thumbnail -o"
# Usage: yt-dlp-playlist <file_name>
# file_name consists of multiple lines each being a single url to be downloaded
alias yt-dlp-playlist="yt-dlp -x --audio-format mp3 --embed-thumbnail -a"

# Usage: Copy the qrcode into cliboard then run `otpappend <name>`
# <name> must be an existing file in the password store vault
alias otpappend="wl-paste | zbarimg -q --raw - | pass otp append "

alias pacfind="pacman -Q | grep"

# Function for changing directory and listing the target content
# Not sure why this couldn't just be an alias
cdd() { cd "$@"; }
cs() { builtin cd "$@" && ls; }
alias cd=cs
